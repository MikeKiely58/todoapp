pipeline {
    agent any
    environment{
        CREATE_SCHEMA = "true"
        RUN_APP = "true"
        DATABASE_URI = credentials("DATABASE_URI")
    }
    stages {
        stage('Setup') {
            steps {
                sh "bash Jenkins/setup.sh"
                //
            }
        }
        stage('Test') {
            steps {
                sh "bash Jenkins/test.sh"
                //
            }
        }
        stage('Create Schema') {
            steps {
                script{ 
                    if (env.CREATE_SCHEMA == "true") {
                        sh "bash Jenkins/create_schema.sh"
                        
                    }
                }
            }
        }
        stage('Run') {
            steps {
                script{
                    if (env.CREATE_SCHEMA == "true") {
                        sh "bash Jenkins/run_app.sh"
                        
                     }
                 }
            }
        }
    }
    post{
        always {
        junit 'junit_report.xml'
        // cobertura
    }}
}
